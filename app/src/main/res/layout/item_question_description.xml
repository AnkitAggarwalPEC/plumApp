<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvQuestion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="12dp"
    android:background="#fefbf7"
    card_view:cardBackgroundColor="#fefbf7"
    card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:id="@+id/vImageAndQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fefbf7"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:weightSum="1">
        <LinearLayout
            android:id="@+id/abc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">
            <ImageView
                android:id="@+id/ivPhotoUserQuestion"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/profile"/>
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is the benefits of this app?"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Descriptop of this app"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/vlikeCommentQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="-20dp">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left">
                <ImageButton
                    android:id="@+id/btnLikeQuestion"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/btn_feed_action"
                    android:src="@drawable/ic_heart_outline_grey" />
                <ImageButton
                    android:id="@+id/btnCommentsQuestion"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/btn_feed_action"
                    android:src="@drawable/ic_comment_outline_grey" />
                <ImageButton
                    android:id="@+id/btnShowStats"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_feed_action"
                    android:src="@drawable/chart_icon" />
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
